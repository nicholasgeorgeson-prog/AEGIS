# AEGIS - Aerospace Engineering Governance & Inspection System
# Environment Configuration
# Copy this file to .env and customize for your environment

# Flask secret key (auto-generated if not set)
TWR_SECRET_KEY=

# Server configuration
TWR_HOST=127.0.0.1
TWR_PORT=5050
TWR_DEBUG=false

# Database paths (defaults to ./data/ directory)
TWR_DB_PATH=
TWR_SCAN_DB_PATH=

# Logging level (DEBUG, INFO, WARNING, ERROR)
TWR_LOG_LEVEL=INFO

# Maximum upload size in MB (default: 50)
TWR_MAX_UPLOAD_MB=50
